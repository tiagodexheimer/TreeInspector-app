# ==============================================
# TreeInspector - Desenvolvimento Local
# ==============================================

# Database Configuration (Local PostgreSQL)
DATABASE_URL=postgresql://treeinspector:treeinspector123@localhost:5432/treeinspector

# Redis Configuration (Local)
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=treeinspector-dev-secret-key
JWT_EXPIRES_IN=24h

# API Configuration
NODE_ENV=development
PORT=3000
CORS_ORIGIN=http://localhost:3001

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# External APIs (desenvolvimento)
PLANTNET_API_KEY=your-plantnet-api-key
GBIF_API_URL=https://api.gbif.org/v1

# Logging
LOG_LEVEL=debug

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Development Tools
DEBUG=treeinspector:*
ENABLE_SWAGGER=true
ENABLE_CORS=true