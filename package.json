{
  "name": "treeinspector-app",
  "version": "1.0.0",
  "description": "Plataforma completa de inspeção de árvores com arquitetura Mobile First",
  "main": "index.js",
  "scripts": {
    "install:all": "npm run install:backend && npm run install:web && npm run install:mobile",
    "install:backend": "cd backend && npm install",
    "install:web": "cd web && npm install",
    "install:mobile": "cd mobile && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:web\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:web": "cd web && npm start",
    "dev:mobile": "cd mobile && npx react-native start",
    "build": "npm run build:backend && npm run build:web",
    "build:backend": "cd backend && npm run build",
    "build:web": "cd web && npm run build",
    "test": "npm run test:backend && npm run test:web && npm run test:mobile",
    "test:backend": "cd backend && npm test",
    "test:web": "cd web && npm test",
    "test:mobile": "cd mobile && npm test",
    "test:e2e": "cypress run",
    "lint": "npm run lint:backend && npm run lint:web && npm run lint:mobile",
    "lint:backend": "cd backend && npm run lint",
    "lint:web": "cd web && npm run lint",
    "lint:mobile": "cd mobile && npm run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "db:migrate": "cd backend && npm run migrate",
    "db:seed": "cd backend && npm run seed",
    "db:reset": "cd backend && npm run db:reset",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "setup": "npm run install:all && npm run db:migrate && npm run db:seed"
  },
  "keywords": [
    "tree-inspection",
    "urban-forestry",
    "mobile-first",
    "react-native",
    "nodejs",
    "postgresql",
    "gis",
    "offline-sync"
  ],
  "author": "TreeInspector Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "cypress": "^13.6.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=22.17.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/seu-usuario/treeinspector-app.git"
  },
  "bugs": {
    "url": "https://github.com/seu-usuario/treeinspector-app/issues"
  },
  "homepage": "https://github.com/seu-usuario/treeinspector-app#readme"
}