# ==============================================
# TreeInspector Mobile - Vari√°veis de Ambiente
# ==============================================

# API Configuration
API_BASE_URL=http://localhost:3000/api/v1
API_TIMEOUT=30000

# App Configuration
APP_NAME=TreeInspector
APP_VERSION=1.0.0
APP_BUILD_NUMBER=1

# Database Configuration
DATABASE_NAME=treeinspector_mobile.db
DATABASE_VERSION=1

# Mapbox Configuration
MAPBOX_ACCESS_TOKEN=your-mapbox-access-token

# External APIs
PLANTNET_API_KEY=your-plantnet-api-key
PLANTNET_API_URL=https://my-api.plantnet.org/v1/identify
GBIF_API_URL=https://api.gbif.org/v1

# Features Flags
ENABLE_BIOMETRIC_AUTH=true
ENABLE_OFFLINE_MODE=true
ENABLE_BACKGROUND_SYNC=true
ENABLE_CRASH_REPORTING=false

# Sync Configuration
SYNC_INTERVAL_MINUTES=15
MAX_RETRY_ATTEMPTS=3
BATCH_SIZE=50

# Photo Configuration
MAX_PHOTO_SIZE_MB=5
PHOTO_QUALITY=0.8
ENABLE_PHOTO_COMPRESSION=true

# Location Configuration
LOCATION_ACCURACY_METERS=5
LOCATION_TIMEOUT_MS=15000
ENABLE_BACKGROUND_LOCATION=false

# Security
KEYCHAIN_SERVICE=treeinspector
ENCRYPTION_KEY_ALIAS=treeinspector_key

# Analytics (opcional)
SENTRY_DSN=your-sentry-dsn
ENABLE_ANALYTICS=false

# Development
DEBUG_MODE=true
ENABLE_FLIPPER=true
LOG_LEVEL=debug

# Testing
MOCK_API_RESPONSES=false
ENABLE_E2E_TESTING=false